{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 2,
    "analysis": {
      "filter": {
        "strip_punct": {
          "type": "pattern_replace",
          "pattern": "[^a-zA-Z0-9]",
          "replacement": ""
        }
      },
      "analyzer": {
        "strip_punct": {
          "filter": [
            "strip_punct"
          ],
          "tokenizer": "keyword"
        }
      }
    }
  },
  "mappings": {
    "doc": {
      "properties": {
        "field_a": {
          "type": "text",
          "fields": {
            "clean": {
              "type": "text",
              "analyzer": "strip_punct"
            },
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "field_b": {
          "type": "text",
          "fields": {
            "clean": {
              "type": "text",
              "analyzer": "strip_punct"
            },
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "field_c": {
          "type": "text",
          "fields": {
            "clean": {
              "type": "text",
              "analyzer": "strip_punct"
            },
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "field_d": {
          "type": "text",
          "fields": {
            "clean": {
              "type": "text",
              "analyzer": "strip_punct"
            },
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "type_boolean": {
          "type": "boolean"
        },
        "type_date": {
          "type": "date",
          "format": "yyyy-MM-dd'T'HH:mm:ss.SSS"
        },
        "type_double": {
          "type": "double"
        },
        "type_float": {
          "type": "float"
        },
        "type_integer": {
          "type": "integer"
        },
        "type_long": {
          "type": "long"
        },
        "type_string": {
          "type": "keyword"
        },
        "type_string_null": {
          "type": "keyword"
        },
        "object": {
          "properties": {
            "a": {
              "properties": {
                "b": {
                  "properties": {
                    "c": {
                      "type": "text",
                      "fields": {
                        "keyword": {
                          "type": "keyword"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "unused": {
          "type": "keyword"
        }
      }
    }
  }
}